{{#each posts}}
<div class="mx-3 my-3 card">
  <div class="card-body text-center">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="card-footer text-muted text-center">
    Created By: {{user.username}} | {{format_date created_at}} | {{comments.length}} {{format_plural 'comment' comments.length}}
  </div>
</div>
{{/each}}